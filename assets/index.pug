doctype html
html
	head
		title Default Title
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(http-equiv='x-ua-compatible', content='ie=edge')
		link(rel='stylesheet', href='assets/static/bootstrap.min.css')
		//- inject:css
		//- endinject
		body
			root
				.sk-circle
					each _, i in Array(12)
						.sk-child(class='sk-circle' + (i + 1))
		//- inject:js
		//- endinject
		script.
			window.DragEvent = window.DragEvent || window.Event;
			System.config({
				map: {
					app: '#{buildDir}/app',
					'rxjs-compat': 'npm:rxjs-compat',
					'reflect-metadata': 'npm:reflect-metadata/Reflect.js'
				},
				packages: {
					app: { main: '#{main}', defaultExtension: 'js' },
					'rxjs-compat': { defaultExtension: 'js' }
				}
			});
			System.import('app');
